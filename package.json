    "esbuild": "0.14.49",
    "eslint": "8.20.0",
    "kolorist": "1.5.1",
    "lint-staged": "13.0.3",
    "pnpm": "7.6.0",
    "rimraf": "3.0.2",
    "simple-git-hooks": "2.8.0",

{
  "name": "fast-vite-nestjs-electron",
  "version": "0.0.1",
  "packageManager": "pnpm@7.1.0",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "description": "Vite + Electron with esbuild, so fast! âš¡",
  "main": "dist/main/index.cjs",
  "scripts": {
    "dev": "rimraf dist && scripts/watch.mjs",
    "build": "rimraf dist && scripts/build.mjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@nestjs/common": "^8.4.5",
    "@nestjs/core": "^8.4.5",
    "@nestjs/microservices": "^8.4.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5"
  },
  "devDependencies": {
    "@anatine/esbuild-decorators": "^0.2.19",
    "@antfu/eslint-config": "^0.23.1",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/compiler-sfc": "^3.2.33",
    "electron": "^18.2.3",
    "electron-builder": "^23.0.3",
    "bytenode": "^1.3.6",
    "esbuild": "0.14.28",
    "eslint": "^8.15.0",
    "kolorist": "^1.5.1",
    "lint-staged": "^12.4.1",
    "pnpm": "^7.1.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "typescript": "^4.6.4",
    "vite": "^2.9.9",
    "vite-plugin-electron": "^0.4.5",
    "vite-plugin-resolve": "^2.1.2",
    "vue-tsc": "^0.34.15",
    "vue": "^3.2.33"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md,json}": [
      "eslint --fix"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "env": {
    "VITE_DEV_SERVER_HOST": "127.0.0.1",
    "VITE_DEV_SERVER_PORT": 3344
  }
}

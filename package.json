  "devDependencies": {
    "@anatine/esbuild-decorators": "0.2.19",
    "@lightwing/eslint-config": "0.0.3",
    "@vitejs/plugin-vue": "3.0.1",
    "@vue/compiler-sfc": "3.2.37",
    "electron": "19.0.9",

{
  "name": "fast-vite-nestjs-electron",
  "version": "0.0.1",
  "packageManager": "pnpm@10.13.1",
  "description": "Vite + Electron with Doubleshot, so fast! âš¡",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "rimraf dist && vite",
    "debug": "rimraf dist && vite -- --dsb-debug",
    "build": "rimraf dist && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@doubleshot/nest-electron": "^0.2.6",
    "@nestjs/common": "^11.0.9",
    "@nestjs/core": "^11.0.9",
    "@nestjs/microservices": "^11.0.9",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@lightwing/eslint-config": "^1.0.104",
    "@vitejs/plugin-vue": "5.2.4",
    "@vue/compiler-sfc": "3.5.18",
    "electron": "37.2.4",
    "electron-builder": "26.0.12",
    "eslint": "9.32.0",
    "lint-staged": "16.1.2",
    "rimraf": "6.0.1",
    "simple-git-hooks": "2.13.0",
    "typescript": "5.8.3",
    "vite": "7.0.6",
    "vite-plugin-doubleshot": "0.0.18",
    "vue-tsc": "3.0.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "electron"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md,json,yml}": [
      "eslint --fix"
    ]
  }
}
